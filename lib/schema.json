{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "parts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Optional manifest mapping part names to relative file paths, e.g. { \"base\": \"./de/base.json\" }"
    },
    "coverHtml": { "type": "string" },
    "basics": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "label": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "url": { "type": "string" },
        "summary": { "type": "string" },
        "expertise": {
          "type": "array",
          "items": { "type": "string" }
        },
        "location": {
          "type": "object",
          "properties": {
            "city": { "type": "string" },
            "countryCode": { "type": "string" },
            "region": { "type": "string" }
          },
          "required": ["city", "countryCode", "region"]
        },
        "birth": {
          "type": "object",
          "properties": {
            "date": { "type": "string", "format": "date" },
            "place": { "type": "string" }
          },
          "required": ["date", "place"]
        },
        "profiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "network": { "type": "string" },
              "username": { "type": "string" },
              "url": { "type": "string" }
            },
            "required": ["network", "username", "url"]
          }
        }
      },
      "required": [
        "name",
        "email",
        "phone",
        "url",
        "summary",
        "expertise",
        "location",
        "birth",
        "profiles"
      ]
    },
    "work": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "location": { "type": "string" },
          "position": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "highlights": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "location", "position", "startDate", "highlights"]
      }
    },
    "practicalExperiences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "location": { "type": "string" },
          "position": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "highlights": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "location", "position", "startDate", "highlights"]
      }
    },
    "caseStudies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "location": { "type": "string" },
          "summary": { "type": "string" },
          "date": { "type": "string", "format": "date" }
        },
        "required": ["name", "location", "summary", "date"]
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "institution": { "type": "string" },
          "location": { "type": "string" },
          "area": { "type": "string" },
          "studyType": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "score": { "type": "string" }
        },
        "required": [
          "institution",
          "location",
          "studyType",
          "startDate",
          "endDate",
          "score"
        ]
      }
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "date": { "type": "string", "format": "date" }
        },
        "required": ["title"]
      }
    },
    "certificates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "issuer": { "type": "string" },
          "url": { "type": "string" }
        },
        "required": ["name", "date", "issuer"]
      }
    },
    "courses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "institution": { "type": "string" },
          "url": { "type": "string" }
        },
        "required": ["name", "startDate", "endDate", "institution"]
      }
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "releaseDate": { "type": "string", "format": "date" },
          "summary": { "type": "string" }
        },
        "required": ["name", "releaseDate", "summary"]
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": { "type": "string" },
          "name": { "type": "string" },
          "level": { "type": "string" },
          "keywords": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["key", "name", "keywords"]
      }
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": { "type": "string" },
          "language": { "type": "string" },
          "fluency": { "type": "string" }
        },
        "required": ["language", "fluency"]
      }
    },
    "interests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "keywords": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "keywords"]
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "minimum": 1 },
          "title": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "client": { "type": "string" },
          "clientAnonymized": { "type": "string" },
          "role": { "type": "string" },
          "industry": { "type": "string" },
          "description": { "type": "string" },
          "highlights": {
            "type": "array",
            "items": { "type": "string" }
          },
          "stack": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": [
          "title",
          "startDate",
          "endDate",
          "client",
          "role",
          "industry",
          "highlights"
        ]
      }
    }
  },
  "additionalProperties": false
}
